<Window x:Class="_03_SMTP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_03_SMTP"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"></Setter>
            <Setter Property="Padding" Value="5"></Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel>
            <Label>Адресат</Label>
            <TextBox Name="txtTo"></TextBox>
            <Label>Заголовок</Label>
            <TextBox Name="txtHeader"></TextBox>
            <Label>Текст</Label>
            <TextBox Name="txtText" Height="100"></TextBox>
            <Button Margin="10" Height="50" Background="Green" Click="Button_Click" 
                    Name="btnSend">SEND</Button>
        </StackPanel>
    </Grid>
</Window>
